@model IEnumerable<HelpDeskApplication.Application.ApplicationUser.UserDto>
@using HelpDeskApplication.Application.ApplicationUser.Queries.GetUserRole
@using MediatR
@inject IMediator mediator

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @{
                        var userRoleQuery = new GetUserRoleQuery(item.Email!);
                        var userRoles = await mediator.Send(userRoleQuery);
                        var rolesString = string.Join(", ", userRoles);
                    }
                    @rolesString
                </td>
                <td>
                    <div class="btn-group">
                        @Html.ActionLink("Change Role", "ChangeRole", new { /* id=item.PrimaryKey */ }, new { @class = "btn btn-primary" })
                        <form method="post" action="@Url.Action("Delete", new { name = item.Email })">
                            <input type="submit" value="Delete" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this user?');" />
                        </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
